<h1>{{title}}</h1>

<hr>

<form id="mainForm" method="post">
  <p>{{selectProvinceLabel}}</p>

  {{#each provinceList}}
    <input type="radio" id="{{this.locationFlag}}" name="location" value="{{this.locationFlag}}" required>
    <label for="{{this.locationFlag}}">{{this.name}}</label><br>
  {{/each}}

  <label for="gas">{{gasTankLabel}}</label><br>
  <input type="number" id="gas" name="gas" placeholder="0" min="0" required><br>

  <label for="wash">{{washLable}}</label><br>
  <input type="number" id="wash" name="wash" placeholder="0" min="0" required><br>

  <div id="washTypeHolder">
    <label for="washType">{{washTypeLable}}</label><br>
    <select name="washType" id="washType">
      {{#each washList}}
      <option value="{{this.washType}}">{{this.name}}</option>
      {{/each}}
    </select><br>
  </div>

  <label for="sundries">{{sundriesLabel}}</label><br>
  <input type="number" step=".01" id="sundries" name="sundries" placeholder="0.00" min="0" required><br>

  <button type="submit">Submit</button>
</form>

<section id="resultsCollection">
  <h2>Example of yearly savings </h2>
  <div>
    <h3>Fuel savings</h3>
    <div id="gasResult"></div>
  </div>
  <div>
    <h3>Car wash savings</h3>
    <div id="washResult"></div>
  </div>
  <div>
    <h3>In-store savings</h3>
    <div id="sundriesResult"></div>
  </div>
  <div id="totalResult">
    <h3>Total Savings</h3>

    <div class="totalTable">
      <div class="tableRow">
        <div class="colA"></div>
        <div class="colB">Gas</div>
        <div class="colC"><span class="productTotal">$<span id="gasSavings"></span></span></div>
      </div>
      <div class="tableRow">
        <div class="colA"></div>
        <div class="colB">Car Wash</div>
        <div class="colC"><span class="productTotal">$<span id="washSavings"></span></span></div>
      </div>
      <div class="tableRow">
        <div class="colA"></div>
        <div class="colB">In-store</div>
        <div class="colC"><span class="productTotal">$<span id="storeSavings"></span></span></div>
      </div>
      <div class="tableRow">
        <div class="colA">+</div>
        <div class="colB">Yearly savings</div>
        <div class="colC"><span class="productTotal">$<span id="savingsTotal"></span></span></div>
      </div>
    </div>
  </div>
  <button id="backToForm" class="buttonLookLikeLink" onclick="app.showFormHideResults()">Back to form</a>
</section>